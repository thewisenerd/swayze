<!DOCTYPE html>
<html>

	<head>
		{{! Document Settings }}

		{{! Page Meta }}
		<title>{{meta_title}}</title>
		<meta name="description" content="{{meta_description}}" />
		<meta name="version" content="1.0.1" />

		{{! Styles'n'Scripts }}
		<!-- Stylesheet -->
		<link rel='stylesheet' href='/css/style.css' type='text/css' media='all' />
		<!-- Font Awesome Icons -->
		<link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
		<!-- Google Fonts; Open Sans & Gentium book Basic -->
		<link href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,800italic,400,700,800|Gentium+Book+Basic:400,400italic,700,700italic' rel='stylesheet' type='text/css'>

		<!-- favicon -->
		<link rel="shortcut icon" href="/images/favicon.png">

		<script type="text/javascript" src="http://code.jquery.com/jquery-2.1.1.min.js"></script>
		<script type="text/javascript" src='/js/un_quote.js'></script>
		<script type='text/javascript' src='/js/youtube_embed.js'></script>
		<script type='text/javascript' src='/js/tweetfetch.js'></script>

		<!--  Mobile viewport scale -->
		<meta name="viewport" content="width=device-width, initial-scale=1">

		{{! Ghost outputs important style and meta data with this tag }}
		{{ghost_head}}

	</head>

	<body class="{{body_class}}">

		<div id="wrapper">

			{{! Everything else gets inserted here }}
			{{{body}}}

		</div>

		{{! Ghost outputs important scripts and data with this tag }}
		{{ghost_foot}}

		{{! Main javascript file }}
		<script type="text/javascript" src="/js/general.js"></script>
		<script type='text/javascript' src='/js/shell.js'></script>

	</body>

</html>
